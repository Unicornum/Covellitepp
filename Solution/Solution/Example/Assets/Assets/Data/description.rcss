
.help {
  visibility: hidden;
}

description {
  display: block;
  color: black;
  padding-left: 0.75em;
  padding-right: 0.75em;
  padding-top: 0.75em;
  padding-bottom: 0.75em;
  border-width: 1px;
  border-color: grey;
  min-height: 10em;
  position: fixed;
  top: 5.5em;
  bottom: 0.5em;
  left: 0.5em;
  right: 0.5em;
  overflow-y: auto;
  background-color: rgba(255, 255, 255, 64);
}
